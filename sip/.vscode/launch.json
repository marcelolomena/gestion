    "version": "0.2.0",
    "compounds": [
        {
            "name": "Full-stack",
            "configurations": ["Node", "Chrome"]
        }
    ],
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}\\public"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node",
            "program": "${workspaceRoot}\\bin\\www"
        }
    ]
}