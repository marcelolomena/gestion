extends base.pug
block titulo
  title SIP Banco de Chile - Sistema Integrado de Presupuesto - Contratos
  link(rel='stylesheet', href='/stylesheets/formulario_consulta.css', type='text/css', media='screen', charset='utf-8')    
block jsgrilla
    script(src='/javascripts/highcharts/highcharts.js')
    script(type='text/javascript', src='/javascripts/views/consultalog.js')
block titulogrilla
  .header(style='height:50px; background-image:url(../images/dash_ch.jpg); background-repeat:no-repeat; background-position: left center; margin-top:5px; margin-bottom:5px')
    h2(style="font-family:'Roboto', sans-serif; color: #002464; font-weight:300; text-align:left; font-size:18px; text-indent:65px; line-height:50px") Consulta Log Transacciones
block grilla
  .cajaFormulario
    .formSap
      | Funcionalidad :  
      select#funcionalidad(class='custom-select' style="width:auto; margin-right: 10px")
        option(value='0', selected='selected') - Escoger Función -
      select#transaccion(class='custom-select' style="width:auto; margin-right: 10px")
        option(value='0', selected='selected') - Escoger Transacción - 
    .formFactura
      | Usuario:
      select#usuario(type='text', name='factura' class='custom-select' style="width:auto; margin-right: 10px")
        option(value='0', selected='selected') - Escoger Usuario - 
      span.titCajaPeriodo Periodo:
      input#fechaini(type='text', name='fechaini')
      |         -
      input#fechafin(type='text', name='fechafin')
      span.titCajaRegistro ID Registro:   
      input#idregistro(type='text', name='idregistro')      
    #buscar.btn Buscar     
  div(style='width: 100%')
    #container(style='width: 100%; float: left; display: inline-block;')
      table#grid
      #pager          
