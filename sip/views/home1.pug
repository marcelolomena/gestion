      include sidebar.pug
      .main-content
        .swipe-area
        a#sidebar-toggle(href='#', data-toggle='.contenedor')
          span.bar
          span.bar
          span.bar
        .content
          header.bg-theme
            .wrap-header
              .row
                a(href='/home')
                  img(src='../../images/header.png', width='384', height='95')
                img(src='../images/vacio.png', width='300', height='4', border='0')
                img(src='../images/header_titulo.png', width='384', height='95', border='0')
          p(style='color: #f1563a')
          if(type==='dashboard')
              include page_dash_1.pug
          else if(type==='static')
              include page_home.pug
          else if(type==='grafico')
              include page_grafico.pug           
          else if(type==='grid')
              include page_grid.pug