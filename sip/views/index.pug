main.auth
  header#auth-header.auth-header(style="background-image: url(../images/img-fondo-login.jpg);")
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title Login SIP
    link(rel='stylesheet', href='sourcemaps/bootstrap.min.css.map', type='text/css', media='screen', charset='utf-8')
    link(rel='stylesheet', href='sourcemaps/main.min.css.map', type='text/css', media='screen', charset='utf-8')
    link(rel='stylesheet', href='stylesheets/main.css', type='text/css', media='screen', charset='utf-8')
