    link(rel='stylesheet', href='stylesheets/stylesheet.css', type='text/css', media='screen', charset='utf-8')    
    h1
      img(src="images/header_chico.png" width="290" height="110")
  body   
    form(name='login',action='/login', method='POST').auth-form

      .form-group
        .form-label-group
          input#inputUser.form-control(type="text" name='username' required="" autofocus="")
          label(for="inputUser") Usuario

      .form-group
        .form-label-group
          input#inputPassword.form-control(type="password" name='password' required="")
          label(for="inputPassword") Clave
      .form-group
        .form-label-group
          select#sistema.custom-select(name='sistema' required='')
            option(value='1') Presupuesto
            option(value='2') Contratos
            option(value='4') Licencias de Software
            option(value='5') Maqueta Limites

      .form-group
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Ingresar

