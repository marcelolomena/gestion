@(userprofiles: Seq[UserProfiles],username:String,totalCount:Long,pagination:String)(implicit lang:Lang)
@import services._
	<!-- 
	Header panel 
	 -->
	@header()
  </head>
  <!--[if lt IE 7 ]> <body class="ie ie6"> <![endif]-->
  <!--[if IE 7 ]> <body class="ie ie7 "> <![endif]-->
  <!--[if IE 8 ]> <body class="ie ie8 "> <![endif]-->
  <!--[if IE 9 ]> <body class="ie ie9 "> <![endif]-->
  <!--[if (gt IE 9)|!(IE)]><!--> 
  <body class=""> 
  <!--<![endif]-->
    
    <!-- Top Navigation bar -->
    @topNav(username)

   <!-- Left Navigation Bar -->
    @leftNav()

     <input type="hidden" value="@totalCount"  class="reccount" />
    <div class="content">
  
        <div class="header">
        	<h1 class="page-title">@Messages("leftnav.userprofile")</h1>
        </div>
        
        <ul class="breadcrumb">
            <li><a href="@routes.Application.index">@Messages("userprofile.home")</a> <span class="divider">/</span></li>
            <li class="active"> @Messages("userprofile.userprofilelist")</li>
        </ul>

 <div class="container-fluid">
    <div class="row-fluid">
	<div class="btn-toolbar">
	   <a href="@routes.UserProfile.addUserProfile"><span class="btn"><i class="icon-plus"></i>@Messages("userprofile.newuserprofile")</span></a>
	  	<div class="btn-group">
	  	</div>
	</div>
		  	
	
	<div class="well">
	    <table class="table">
	      <thead>
	        <tr class="first-row">
	          <th> @Messages("userprofile.userprofile")</th>
	           <th> @Messages("userprofile.userprofilecode")</th>
	            <th>@Messages("userprofile.updatedby")</th>
	             <th>@Messages("userprofile.updateddate")</th>
	          <th style="width: 26px;"> @Messages("subtype.action")</th>
	        </tr>
	      </thead>
	      <tbody>
	        @for(userprofile <- userprofiles) {
	        <tr>
	          <td class="styleName"><a href="@routes.UserProfile.editUserProfile(userprofile.id.get.toString)">@userprofile.profile_name </a></td>
	           <td class="styleCode"><a href="@routes.UserProfile.editUserProfile(userprofile.id.get.toString)">@userprofile.profile_code </a></td>
	           <td class="styleUpdatedBy"><a href="@routes.UserProfile.editUserProfile(userprofile.id.get.toString)">@if(!userprofile.updated_by.isEmpty){@UserService.findUserDetailsById(userprofile.updated_by.get.toLong).get.first_name}</a></td>
	          <td class="styleUpdateDate"><a href="@routes.UserProfile.editUserProfile(userprofile.id.get.toString)">@userprofile.updation_date </a></td>
	          <td>
	              <a href="@routes.UserProfile.editUserProfile(userprofile.id.get.toString)"><i class="icon-pencil "></i></a>
	              <a role="button" data-toggle="modal"><i id="stage_@userprofile.id.get.toString" class="icon-remove" style="cursor: pointer;"></i></a>
	          </td>
	        </tr>
	        }
	      </tbody>
	    </table>
	    
	    @if(totalCount >10){
		<div>No of Records Per Page
			<select id="pageRecord" class="pageRecord span1" >
			<option value="10">10</option>
			<option value="20">20</option>
			<option value="50">50</option>
			<option value="100">100</option>
			</select>
		</div>
		<!-- Pagination -->
		<div class="pagination">
		    <ul>
		      @Html(pagination)
		    </ul>
		</div>
		}else{
		<input id="pageRecord" class="pageRecord"  type="hidden" value="10">
		}	
	</div>
<!-- 	<div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">ï¿½</button>
	        <h3 id="myModalLabel">Delete Confirmation</h3>
	    </div>
	    <div class="modal-body">
	        <p class="error-text"><i class="icon-warning-sign modal-icon"></i>Are you sure you want to delete the user?</p>
	    </div>
	    <div class="modal-footer">
	        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
	        <button class="btn btn-danger" data-dismiss="modal">Delete</button>
	    </div>
	</div> -->
	<!-- Footer panel -->                    
  	 @footer()
  	  <div id="dialog-confirm"></div> 
  	<div id="pop-box-over" class="display-none"> 
  	</div>
   
	<div id="dialog-box" class="product-detail-dialog" style="width:190px;"><span class="dialog-close"></span><div class="dialog-content">
	</div>
	</div>
	<div class="tooltip"></div>	
    </div>
</div>
    </div>
        <script type="text/javascript">
	  $(document).ready(function(){
		  $(".icon-remove").on("click", renderDeleteItemFromList);
			function renderDeleteItemFromList(){
				var _this = $(this);
				var deletion_id = _this.attr("id").split("_")[1];
				$("#dialog-confirm").html("@Messages("delete.confirm.userprofile")");
						// Define the Dialog and its properties.
						$("#dialog-confirm").dialog({
							resizable : false,
							modal : true,
							title : "@Messages("delete.confirm.title")",
							height : 150,
							width : 300,
							buttons : {
								"Yes" : function() {
									var url = "/delete-user-profile?id=" + deletion_id;
									$.get(url, function(data) {
										if (data == "Success") {
											//window.location.reload();
											if($(_this).parents("tbody").children().length==1){
											       if(typeof getUrlParameter("page") !== "undefined" && getUrlParameter("page") !== null){
											        var page_num = parseInt(getUrlParameter("page"));
											        var record =  parseInt(getUrlParameter("record"));
											        page_num= page_num - 1;
											        var sPageURL = window.location.href;
											        var sURLVariables = sPageURL.split('?')[0];
											        window.location.href =sURLVariables+"?page="+page_num+"&record="+record
											        
											       }else{
											        window.location.reload();
											       }
   											}else{
   											 window.location.reload();
   											}
										}
									});
									$(this).dialog('close');
									$("#pop-box-over").css("display", "none");
									$("#dialog-confirm").css("display", "none");
								},
								"No" : function() {
									$(this).dialog('close');
									$("#pop-box-over").css("display", "none");
									$("#dialog-confirm").css("display", "none");
								}
							}
						});
						$("#pop-box-over").css("display", "block");
						$("#dialog-confirm").css("display", "block");
					}
	    });
    </script>
   </body>
</html>