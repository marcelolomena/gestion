        <script>
$(document).ready(function(){
	 $("#profile_code").on("keypress", inputOnlySmallCapsAndNoSpace);
	 
	 function inputOnlySmallCapsAndNoSpace(evt){  
		 if (evt.which == 32) { 
			 return false;
		 }else{
		 this.style.textTransform = 'LOWERCASE';
		 }
	 }
});
    </script>
