        </ul>

 <div class="container-fluid">
 	
	<div class="row-fluid">

        <div class="block">
            <p class="block-heading">@Messages("userprofile.edituserprofile")</p>
             <div class="block-body">
               @form(action = routes.UserProfile.updateUserProfile, 'id->"myStageEdit") {
	                @inputText(myForm("profile_name"),'_label ->Messages("userprofile.userprofileName"),'placeholder->Messages("userprofile.placeholder.profile_name"),'class->"span4",'name -> "profile_name")
	                @inputText(myForm("profile_code"),'_label ->Messages("userprofile.userprofilecode"),'placeholder->Messages("userprofile.placeholder.profile_code"),'class->"span4",'name -> "profile_code",'maxlength ->"4")
	               	@textarea(myForm("description"),'placeholder->Messages("userprofile.placeholder.description"),'_label -> Messages("userprofile.description"),'class->"span4",'name->"description",'rows->"7",'cols->"60")
	                 <input type="hidden" value="0" name="is_deleted" id="is_deleted" />
	                 <input type="hidden" value="@myForm.data.get("id")" name="id"/>
	                <div> <input style="margin-left:12px;margin-right:12px;" class="btn" value="@Messages("button.save")" type="submit"/><a href="javascript:history.back(-1);" class="btn">@Messages("button.cancel")</a></div>
	                <div class="clearfix"></div> 
             }
            </div>
        </div>

