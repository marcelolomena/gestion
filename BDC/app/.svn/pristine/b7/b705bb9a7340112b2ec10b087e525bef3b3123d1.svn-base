    <!-- Top Navigation bar -->
    @topNav(username)

   <!-- Left Navigation Bar -->
    @leftNav()

     <input type="hidden" value="@totalCount"  class="reccount" />
    <div class="content">
  
        <div class="header">
        	<h1 class="page-title">  @Messages("leftnav.gerenciamanagement")</h1>
        </div>
        
        <ul class="breadcrumb">
            <li><a href="@routes.Application.index"> @Messages("gerencia.home")</a> <span class="divider">/</span></li>
            <li class="active"> @Messages("gerencia.gerencialist")</li>
        </ul>

 <div class="container-fluid">
    <div class="row-fluid">
                    
	<div class="btn-toolbar">
	   <a href="@routes.Genrencia.createGenrencia"><span class="btn"><i class="icon-plus"></i> @Messages("gerencia.newgerencia")</span></a>
	   	<!-- <form class="search form-inline right">
       		<input type="text" placeholder="Search...">
       	 <button class="btn right">Search</button>
       	  
		 <div class="search form-inline right" >
       		<input type="text" class="searchKey" value="" placeholder="Search...">
       	 	<button class="btn right searchBtn">Search</button>
       	 </div>-->
	  	<div class="btn-group">
	  	</div>
	</div>
		  	
	
	<div class="well">
	

	    <table class="table">
	      <thead>
	        <tr class="first-row">
	          @*<th>@Messages("gerencia.id") </th>*@
	          <th>@Messages("gerencia.gerencia")</th>
	          <th> @Messages("gerencia.gerenciahead")</th>
	          <th>@Messages("budgettype.updatedby") </th>
	             <th>@Messages("budgettype.updateddate")</th>
	                 <th>@Messages("service.catelogue.status")</th>
	          <th style="width: 26px;"> @Messages("gerencia.action")</th>
	        </tr>
	      </thead>
	      <tbody>
	        @for(gerencia <- genrencias) {
	        <tr>
 	          @*<td><a href="@routes.Genrencia.editGenrencia(department.dId.get.toString())">@department.dId </a></td>*@
	          <td><a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())">@gerencia.genrencia </a></td>
	          <td><a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())">
	          @if(!UserService.findUserDetailsById(gerencia.user_id).isEmpty){
	          	@UserService.findUserDetailsById(gerencia.user_id).get.first_name.substring(0, 1). &nbsp;@UserService.findUserDetailsById(gerencia.user_id).get.last_name	
	          }
	          </a>
	          </td>
	             <td><a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())">
	          @if(!gerencia.updated_by.isEmpty){
	          	 @if(!UserService.findUserDetailsById(gerencia.updated_by.get).isEmpty){
	          	@UserService.findUserDetailsById(gerencia.updated_by.get).get.first_name.substring(0, 1).
	          	 &nbsp;@UserService.findUserDetailsById(gerencia.updated_by.get).get.last_name	
	          }
	          }else{
	          NA
	          }
	          </a>
	          </td>
	             <td><a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())">
	          @if(!gerencia.updation_date.isEmpty){
	          	@gerencia.updation_date.get.format("dd-MM-yyyy")
	          }else{
	          NA
	          }
	          </a>
	          </td>
	        <td><a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())">
	          @if(gerencia.is_deleted.toLong ==1){
	          Inactive
	          }else{
	         Active
	          }
	          </a>
	          </td>
	          
	        <td>
	             <a href="@routes.Genrencia.editGenrencia(gerencia.dId.get.toString())"><i class="icon-pencil" ></i></a>
	                  <a  role="button" data-toggle="modal" >
	                 @if(gerencia.is_deleted.toLong ==1){
	          <i id="gerentia_@gerencia.dId.get.toString()" class="activate-status status_update" style="cursor: pointer;" title="Update Status"></i>
	          }else {
	          <i id="gerentia_@gerencia.dId.get.toString()" class="icon-remove status_update" style="cursor: pointer;" title="Update Status"></i>
	          }
	          </a>
	          </td>
	        </tr>
	        }
	      </tbody>
	    </table>
	    
	    @if(totalCount >10){
		<div>No of Records Per Page
			<select id="pageRecord" class="pageRecord span1" >
			<option value="10">10</option>
			<option value="20">20</option>
			<option value="50">50</option>
			<option value="100">100</option>
			</select>
		</div>
		<!-- Pagination -->
		<div class="pagination">
		    <ul>
		      @Html(pagination)
		    </ul>
		</div>
		}else{
		<input id="pageRecord" class="pageRecord"  type="hidden" value="10">
		}	
	</div>

	
