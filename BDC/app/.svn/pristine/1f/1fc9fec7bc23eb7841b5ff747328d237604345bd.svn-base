@(recoverPasswordForm: Form[PasswordRecoverMaster],id:String)(implicit lang: Lang)
@import helper._
@frontend.layout()
@import services._


<style type="text/css">
@@media screen and (max-width: 1024px){
		.main{
		margin: 0px 0 0 200px;
		}
}
 #flot-placeholder{width:650px;height:auto;}       
</style>
<!--[if lte IE 8]><script language="javascript" type="text/javascript" src="http://www.pureexample.com/js/flot/excanvas.min.js"></script><![endif]-->

</head>
<body>
<div class="top_part " style="background-position: left -216px;">
             <div class="popup-div display-none"></div>
</div>
<div class="main">
	<section class="slider" id="pDetail_page">
   		<div class="product_main" style="   float: left; height: auto; overflow: hidden;">
		  <div class="product_detail_1 ">
			 <div id="new_program_header">
				<p>@Messages("resetpassword.newPassword")</p>
			</div>
		  </div>
		            <div>
		               @form(action = controllers.Frontend.routes.User.passwordUpdate(id), 'id->"recoverPassword-form") {
		                   @inputPassword(recoverPasswordForm("new_password"),'name->"new_password",'class->"span12 inputTextBoxresetPassword",'_label->Messages("forgotpassword.newpassword.label"),'placeholder->Messages("forgotpassword.newpassword.enter"))
		                   @inputPassword(recoverPasswordForm("confirm_password"),'name->"confirm_password",'class->"span12 inputTextBoxresetPassword",'_label->Messages("forgotpassword.confirmpassword.label"),'placeholder->Messages("forgotpassword.confirmpassword.enter"))
					       		<span class="left"><input class="btn form-button" value="@Messages("button.save")" type="submit"/></span>
					       		<span  class="left" style="margin-left:26px;"><input id="cancel-forgot_password" class="btn form-button" value="@Messages("button.cancel")" type="button"/></span>
					       		</div>
		               	}
		            </div>
		        </div>
		</section>
		</div>
		
		 @frontend.headerScripts()	
<script type="text/javascript" src="@routes.Assets.at("frontend/js/main.js")"></script>
   <script type="text/javascript">
   $(document).ready(function() {
	   $('#cancel-forgot_password').on('click',function() {
			window.location.href='/user-login';
		   });
	});
	</script>
  </body>
</html>
