            <p class="block-heading">@Messages("stage.editstage")</p>
             <div class="block-body">
               @form(action = routes.Stage.updateStage, 'id->"myStageEdit") {
	
	                @inputText(myStageForm("stage"),'_label ->Messages("stage.stage"),'placeholder->Messages("stage.placeholder.stage"),'class->"span4",'name -> "stage")
	               	@inputText(myStageForm("sequencing"),'maxlength->"6",'_label ->Messages("sequence"),'placeholder->Messages("placeholder.sequence"),'class->"span4",'name -> "sequencing")
	               	@textarea(myStageForm("description"),'placeholder->Messages("stage.placeholder.description"),'_label -> Messages("stage.description"),'class->"span4",'name->"description",'rows->"7",'cols->"60")
	               
	                 <input type="hidden" value="@myStageForm.data.get("is_deleted")" name="is_deleted" id="is_deleted" />
	                 <input type="hidden" value="@myStageForm.data.get("id")" name="id"/>
	                <div> <input style="margin-left:12px;margin-right:12px;" class="btn" value="@Messages("button.save")" type="submit"/><a href="javascript:history.back(-1);" class="btn">@Messages("button.cancel")</a></div>
	                <div class="clearfix"></div> 
             }
            </div>
        </div>

