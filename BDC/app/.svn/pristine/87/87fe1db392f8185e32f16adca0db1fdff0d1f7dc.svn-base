$(document).ready(function(){
	  $("#sequencing").keydown(function (e) {
		  if ((!e.shiftKey && !e.ctrlKey && !e.altKey) && ((e.keyCode >= 48 && e.keyCode <= 57) ||
	                (e.keyCode >= 96 && e.keyCode <= 105))) {
	          }
	          else if (e.keyCode != 8 && e.keyCode != 46 && e.keyCode != 37 && e.keyCode != 39 &&
